{% extends "base.html.twig" %}
{% block content %}
    <!-- Start home -->
    <section class="bg-half page-next-level">
        <div class="bg-overlay"></div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="text-center text-white">
                        <h4 class="text-uppercase title mb-4">
                            Détails du poste
                        </h4>
                        <ul class="page-next d-inline-block mb-0">
                            <li>
                                <a href="index.html" class="text-uppercase font-weight-bold">
                                    Acuueil
                                </a>
                            </li>
                            <li>
                                <a href="#" class="text-uppercase font-weight-bold">
                                    Détails du poste
                                </a>
                            </li>
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end home -->
    <!-- JOB DETAILS START -->
    <section class="section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-7">
                    <div class="job-detail border rounded p-4">
                        <div class="job-detail-content">
                            <img src="{{ asset('assets/images/featured-job/img-4.png') }}" alt="" class="img-fluid float-left mr-md-3 mr-2 mx-auto d-block">
                                <div class="job-detail-com-desc overflow-hidden d-block">
                                    <h4 class="mb-2">
                                        <a href="#" class="text-dark">
                                            {{poste.titre}}
                                        </a>
                                    </h4>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="job-detail rounded mt-2 p-4">
                                    <div class="job-detail-desc">
                                        {% set paragraphes = poste.description|split('. ') %}
                                        {% for paragraphe in paragraphes %}
                                            <p class="text-muted mb-3 text-justify">
                                                {{ paragraphe ~ (paragraphe ends with '.' ? '' : '.') }}
                                            </p>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-5 mt-4 mt-sm-0">
                        <div class="job-detail border rounded p-4">
                            <h5 class="text-muted text-center pb-2">
                                <i class="mdi mdi-bank text-muted"></i>
                                A propos de l'entreprise
                            </h5>
                            <div class="job-detail-location pt-4 border-top">
                                <div class="job-details-desc-item">
                                    <div class="float-left mr-2">
                                        <i class="mdi mdi-account text-muted"></i>
                                    </div>
                                    <p class="text-muted mb-2">
                                        :
                                        {{ poste.company.raisonSociale }}
                                    </p>
                                </div>
                                <div class="job-details-desc-item">
                                    <div class="float-left mr-2">
                                        <i class="mdi mdi-map-marker mr-2 text-muted"></i>
                                    </div>
                                    <p class="text-muted mb-2">
                                        :
                                        {% if user.localisation == "" %}
                                            Non renseigné
                                        {% else %}
                                            {{ user.localisation }}
                                        {% endif %}
                                    </p>
                                </div>
                                <div class="job-details-desc-item">
                                    <div class="float-left mr-2">
                                        <i class="mdi mdi-email text-muted"></i>
                                    </div>
                                    <p class="text-muted mb-2">
                                        :
                                        {{ user.email }}
                                    </p>
                                </div>
                                <h6 class="text-dark f-17 mt-3 mb-0">
                                    Description :
                                </h6>
                                <p class="text-muted mb-3">
                                    {{ poste.company.description|slice(0, 130) ~ (poste.company.description|length > 130 ? '...' : '') }}
                                </p>
                            </div>
                        </div>
                        <div class="job-detail border rounded mt-4">
                            <a href="{{ path('app_candidacture_poste', {id: poste.id})}}" class="btn btn-primary btn-block">
                                Postuler
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    <!-- JOB DETAILS END -->
    {% endblock %}
    