<h1>Créer un nouveau profil développeur</h1>

<form action="{{ path('dev_save') }}" method="POST">
    <div>
        <label for="nom">Nom :</label>
        <input type="text" id="nom" name="nom" required>
    </div>

    <div>
        <label for="prenoms">Prénoms :</label>
        <input type="text" id="prenoms" name="prenoms" required>
    </div>

    <div>
        <label for="bibliographie">Biographie :</label>
        <textarea id="bibliographie" name="bibliographie" required></textarea>
    </div>

    <div>
        <label for="salaireMin">Salaire minimum :</label>
        <input type="number" step="0.01" id="salaireMin" name="salaireMin" required>
    </div>

    <div>
        <label for="visibilite">Visibilité :</label>
        <input type="checkbox" id="visibilite" name="visibilite">
    </div>

    <button type="submit">Créer le profil</button>
</form>
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
