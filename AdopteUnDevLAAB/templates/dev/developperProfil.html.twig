<form action="{{ path('dev_save') }}" method="POST" enctype="multipart/form-data">
    <div>
        <label for="nom">Nom :</label>
        <input type="text" id="nom" name="nom" value="{{ dev.nom ?? '' }}" required>
    </div>
    <div>
        <label for="prenoms">Prénoms :</label>
        <input type="text" id="prenoms" name="prenoms" value="{{ dev.prenoms ?? '' }}" required>
    </div>
    <div>
        <label for="bibliographie">Biographie :</label>
        <textarea id="bibliographie" name="bibliographie" required>{{ dev.bibliographie ?? '' }}</textarea>
    </div>
    <div>
        <label for="salaireMin">Salaire minimum souhaité :</label>
        <input type="number" id="salaireMin" name="salaireMin" value="{{ dev.salaireMin ?? '' }}" required>
    </div>
    <div>
        <label for="visibilite">Visibilité :</label>
        <input type="checkbox" id="visibilite" name="visibilite" {% if dev.visibilite %}checked{% endif %}>
    </div>
    <button type="submit">Enregistrer</button>
</form>
