<h1>Modifier le profil de {{ company.name }}</h1>

<form action="{{ path('company_save') }}" method="POST">
    <input type="hidden" name="id" value="{{ company.id }}">

    <div>
        <label for="name">Nom de l'entreprise :</label>
        <input type="text" id="name" name="name" value="{{ company.name }}" required>
    </div>

    <div>
        <label for="location">Localisation :</label>
        <input type="text" id="location" name="location" value="{{ company.location }}" required>
    </div>

    <div>
        <label for="description">Description :</label>
        <textarea id="description" name="description" required>{{ company.description }}</textarea>
    </div>

    <div>
        <label for="technologies">Technologies recherchées :</label>
        <input type="text" id="technologies" name="technologies" value="{{ company.technologies }}" required>
    </div>

    <div>
        <label for="salaryRange">Plage salariale :</label>
        <input type="number" step="0.01" id="salaryRange" name="salaryRange" value="{{ company.salaryRange }}" required>
    </div>

    <button type="submit">Mettre à jour</button>
</form>
